<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>VMware AI Insights Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f4f4f4; }
    h1 { color: #333; }
    .vm {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      padding: 15px;
      margin-bottom: 10px;
    }
    .vm h3 { margin: 0 0 10px 0; }
    .vm .info { margin: 5px 0; }
    .low-risk { background: #e7f7e7; }
    .medium-risk { background: #fffbe6; }
    .high-risk { background: #ffe6e6; }
  </style>
  <script>
    async function fetchData() {
      const res = await fetch('/api/data');
      const data = await res.json();
      const container = document.getElementById('vm-list');
      container.innerHTML = '';
      data.forEach(vm => {
        const div = document.createElement('div');
        let riskClass = '';
        const risk = vm.risk || '';

        if (risk.includes('High')) riskClass = 'high-risk';
        else if (risk.includes('Medium')) riskClass = 'medium-risk';
        else if (risk.includes('Low')) riskClass = 'low-risk';

        div.className = `vm ${riskClass}`;
        div.innerHTML = `
          <h3>${vm.name}</h3>
          <div class="info"><strong>Power:</strong> ${vm.power_state}</div>
          <div class="info"><strong>CPU:</strong> ${vm["cpu.usage.average"] || 'N/A'}</div>
          <div class="info"><strong>Memory:</strong> ${vm["mem.usage.average"] || 'N/A'}</div>
          <div class="info"><strong>Risk:</strong> ${vm.risk || 'No risk detected'}</div>
          <div class="info"><strong>Recommendation:</strong> ${vm.recommendation || 'None'}</div>
        `;
        container.appendChild(div);
      });
    }

    setInterval(fetchData, 10000); // refresh every 10 seconds
    window.onload = fetchData;
  </script>
</head>
<body>
  <h1>VMware AI Insights Dashboard</h1>
  <div id="vm-list">Loading...</div>
</body>
</html>

